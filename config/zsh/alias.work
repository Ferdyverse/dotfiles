#!/usr/bin/env bash

# Alias settings for all systems

# General aliases
source $HOME/.dotfiles/config/zsh/alias.general


update_ssh() {
  eval "$(ssh-agent -s)"
  ssh-add ~/.ssh/id_ed25519
}

# General linux
if [[ $OSTYPE == linux* ]]; then

	# Source folder
	alias src="cd $HOME/src"

	# Update dotfiles
	alias dotfiles="cd $HOME/.dotfiles/; ./bootstrap.sh --work; cd -"

	# SSH
	alias essh="update_ssh"

	#k8s
	alias k8s="$HOME/.dotfiles/config/scripts/k8s_config.sh"

fi
