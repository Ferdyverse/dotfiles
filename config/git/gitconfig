[alias]
	i = init
	s = status
	p = push
	a = add .
	c = commit -m
	b = branch
		
	ra = remote add
	po = push origin
	co = checkout

	pom = push origin master
	acp = "!f() { git add -A && git commit -m \"$@\" && git push; }; f"

[user]
	name = Ferdyversee
	email = github@berger-em.de

[core]
	hooksPath = ~/.config/git/hooks

[http]
	sslVerify = false

[init]
	defaultBranch = main

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[push]
  autoSetupRemote = true

[pull]
  rebase = true

[rebase]
  autoStash = true

[url "git@github.com:"]
  insteadof = "gh:"
